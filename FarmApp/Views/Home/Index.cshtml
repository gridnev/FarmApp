@model IEnumerable<FarmApp.ViewModels.ProductViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        @*<img src="~/Content/Dollarphotoclub_65896556.jpg" class="img-responsive" />*@
    </div>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img data-src="holder.js/100%x200" alt="100%x200" src="data:image/svg+xml;base64," data-holder-rendered="true" style="height: 200px; width: 100%; display: block;">
                <div class="caption">
                    <h3 id="thumbnail-label">@product.Title<a class="anchorjs-link" href="#thumbnail-label"><span class="anchorjs-icon"></span></a></h3>
                    <p>@product.Description</p>
                    <p><a href="#" class="btn btn-primary" role="button">В корзину</a> <a href="#" class="btn btn-default" role="button">Подробнее</a></p>
                </div>
            </div>
        </div>
    }
</div>
