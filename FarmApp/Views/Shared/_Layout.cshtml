<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-fixed-top" style="box-shadow: 0 1px 2px 0 rgba(0,0,0,0.22); background-color: #FFFFFF;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("На Ферме", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <form class="navbar-form navbar-left" role="search" action="@Url.Action("Search", "Home")" method="POST">
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control" name="query" placeholder="@(ViewBag.Query??"Поиск")" aria-describedby="sizing-addon3" style="border-right: 0">
                        <span class="input-group-btn" id="sizing-addon3" style="background: none;">
                            <button class="btn btn-default" type="submit" style="border-left: 0; background: none;">
                                <span class="glyphicon glyphicon-search" style="color: lightgray"></span>
                            </button>
                        </span>
                    </div>
                    
                </form>
                <ul class="nav navbar-nav">
                    <li></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - На Ферме</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
